<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.singh.alumniportal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.DashBoard.NavigationFragment.GalleryActivity"></activity>
        <activity android:name=".activity.DashBoard.NavigationFragment.SearchJobActivity" />
        <activity android:name=".activity.DashBoard.NavigationFragment.PostJobActivity" />
        <activity android:name=".activity.DashBoard.NavigationFragment.FindFriendActivity"
            android:parentActivityName=".activity.DashBoard.HomeActivity"/>
        <activity
            android:name=".activity.DashBoard.NavigationFragment.OwnProfileActivity"
            android:parentActivityName=".activity.DashBoard.HomeActivity" />
        <!--<activity android:name=".activity.DashBoard.NavigationFragment.EventActivity" />-->
        <activity android:name=".activity.DashBoard.NavigationFragment.UpcomingBirthdayActivity" />
        <activity android:name=".activity.DashBoard.NavigationFragment.CreateEventActivity" />
        <activity
            android:name=".activity.DashBoard.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.RegistrationActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>