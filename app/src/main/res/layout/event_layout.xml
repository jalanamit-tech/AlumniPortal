<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    cardview:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_height="190dp"
    android:layout_width="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_hostname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/org_employee_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Host Name"
            android:textStyle="bold"
            />
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_event_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_hostname"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:id="@+id/event_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EventTitle"
                android:textStyle="bold"
                />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_event_category"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Category"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_event_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_event_title"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Date"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_event_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_event_date"
        >
        <TextView
            android:id="@+id/event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Location"
            android:textStyle="bold"
            />
    </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>

